type Query {
    employees: [Employee]
    races: [Race]
    professions: [Profession]
    characters: [CharacterInfo]
}

type Mutation {
	createCharacter(input: CharacterInfoCreation!): CharacterInfo!

    # restricted
    updateSalary(input: UpdateSalaryInput!): UpdateSalaryPayload
}

type Employee {
    id: ID!
    name: String
    # restricted
    salary: String
}

type CharacterInfo {
	id: ID!
	name: String
	race: Race
	profession: Profession
	level: Int
	height: Float
    weight: Float
}

type Race {
	id: ID!
	name: String!
}

type Profession {
	id: ID!
	name: String!
}

input CharacterInfoCreation {
	id: ID!
	name: String!
	raceId: String!
	professionId: String!
	level: Int!
}

input UpdateSalaryInput {
    employeeId: ID!
    salary: String!
}

type UpdateSalaryPayload {
    success: Boolean!
    employee: Employee
}
